# === Clerasense Environment Configuration ===
# Copy this file to .env and fill in real values.
# NEVER commit .env to version control.

# OpenAI API Key for RAG pipeline
OPENAI_API_KEY=sk-your-openai-api-key-here

# PostgreSQL connection string (remote or local)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=change-this-to-a-random-secret-key

# JWT secret for doctor authentication tokens
JWT_SECRET=change-this-to-a-jwt-secret

# Embedding model name for RAG pipeline
EMBEDDING_MODEL_NAME=text-embedding-3-small

# Application environment: development | staging | production
APP_ENV=development
